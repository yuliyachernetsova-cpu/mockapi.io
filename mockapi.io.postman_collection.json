                "exec": [
                  "const response = pm.response.json();\r",
                  "\r",
                  "pm.test(\"Status code is 200\", () => {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Response contains correct ID\", () => {\r",
                  "    pm.expect(response.id).to.eql(pm.collectionVariables.get(\"product_id\"));\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Check data schema\", () => {\r",
                  "    pm.expect(response).to.include.keys('id', 'name', 'price', 'createdAt');\r",
                  "        const priceAsNumber = Number(response.price);\r",
                  "    pm.expect(priceAsNumber).to.be.a('number');\r",
                  "    pm.expect(isNaN(priceAsNumber)).to.be.false;\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
