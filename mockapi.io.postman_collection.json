    {
      "name": "CRUD immitation + chaining",
      "item": [
        {
          "name": "Add Product",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();\r",
                  "\r",
                  "pm.test(\"Status code is 201 (Created)\", () => {\r",
                  "    pm.response.to.have.status(201);\r",
                  "});\r",
                  "\r",
                  "pm.test(\"ID is assigned and is a string\", () => {\r",
                  "    pm.expect(response.id).to.be.a('string');\r",
                  "    pm.collectionVariables.set(\"product_id\", response.id);\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Correct name is saved\", () => {\r",
                  "    const requestData = JSON.parse(pm.request.body.raw);\r",
                  "    pm.expect(response.name).to.eql(requestData.name);\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  ""
