        {
          "name": "Verification",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Get raw data to avoid JSON parsing errors\r",
                  "const statusCode = pm.response.code;\r",
                  "const bodyContent = pm.response.text();\r",
                  "\r",
                  "console.log(\"Step 5 Debug - Status:\", statusCode);\r",
                  "console.log(\"Step 5 Debug - Body:\", bodyContent);\r",
                  "\r",
                  "pm.test(\"Resource is effectively gone\", function () {\r",
                  "    // We accept 404 (Ideal), 200 with 'Not found' (MockAPI quirk), \r",
                  "    // or 500 (Server error when resource is missing)\r",
                  "    const isGone = (statusCode === 404 || statusCode === 500 || bodyContent.includes(\"Not found\"));\r",
                  "    \r",
                  "    pm.expect(isGone).to.be.true;\r",
                  "});\r",
                  "\r",
                  "// Always clean up the variable to prevent conflicts in the next run\r",
                  "pm.collectionVariables.unset(\"product_id\");"
                ],
